@using Ui.Asp.Mvc.Models.Account
@model MemberFormViewModel

@{
}

<h2>Update Profile Information</h2>
<form class="account-form" novalidate method="post" asp-action="Index" asp-controller="Account">
    <input asp-for="Id" hidden />
    <input asp-for="Avatar" hidden />
    <input asp-for="RoleName" hidden />
    <input asp-for="JobTitleId" hidden />

    <div class="horizontal">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" autocomplete="off" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" autocomplete="off" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="horizontal">
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BirthDate"></label>
            <div class="date-input-wrapper">
                <input asp-for="BirthDate" type="date" class="form-control" autocomplete="off" />
                <i class="bi bi-calendar"></i>
            </div>
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>

    @if (string.IsNullOrEmpty(ViewBag.ExternalProvider))
    {
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    }
    

    <div class="horizontal mt-3">
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" autocomplete="off" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" class="form-control" autocomplete="off" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" autocomplete="off" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-blue mt-4">Save Information</button>

</form>




