@model UserModel


<div class="modal fade not-validate" id="memberMessageModal_@Model.Id" tabindex="-1" aria-labelledby="memberMessageModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-chat-fill"></i></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <label for="memberMessage">Message</label>
                    <input type="text" id="memberMessage" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-blue" data-bs-dismiss="modal">Send</button>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        const messageModal = document.querySelector("#memberMessageModal_@Model.Id")

        const memberMessageInput = messageModal.querySelector("input")
        const memberMessageButton = messageModal.querySelector(".btn-blue")

        memberMessageButton.addEventListener("click", (e) => {
            console.log(memberMessageInput.value)
            signalRSendMessage("@Model.Id", memberMessageInput.value)
        })
    })
</script>