@model ProjectModel

@{
    var today = DateTime.Now;
    TimeSpan timeDifference;
    string status = "";

    if (Model.Status.StatusName == "Pending")
    {
        timeDifference = Model.StartDate.ToDateTime(TimeOnly.MinValue) - today;
        status = $"Starts in {timeDifference.Days} days";
    }
    else if (Model.Status.StatusName == "Active")
    {
        timeDifference = Model.EndDate.ToDateTime(TimeOnly.MinValue) - today;

        if (timeDifference.Days <= 0)
        {
            status = $"{Math.Abs(timeDifference.Days)} days overdue";
        }
        else
        {
            status = $"{timeDifference.Days} days left";
        }

    }
    else
    {
        timeDifference = today - Model.EndDate.ToDateTime(TimeOnly.MinValue);

        status = $"Completed";
    }


    string avatarPath = imageManager.GetPath(nameof(ProjectsController), Model.Avatar!);

    

    ProjectFormViewModel editModel = new ProjectFormViewModel()
    {
        Id = Model.Id,
        Name = Model.Name,
        Description = Model.Description,
        StartDate = Model.StartDate,
        EndDate = Model.EndDate,
        Budget = Model.Budget,
        CustomerId = Model.Customer.Id,
        StatusId = Model.Status.Id,
        Avatar = Model.Avatar
    };

}


<partial name="_EditProjectModal" model="@editModel" />

<div class="project-card" data-status="@Model.Status.StatusName">
    <header>
        <div class="title">
            <img class="project-avatar" src="@avatarPath" />
            <div>
                <h6>@Model.Name</h6>
                <p>@Model.Customer.CustomerName</p>
            </div>
        </div>
        <div class="menu">
            <button class="menu-btn" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></button>
        
            <ul class="dropdown-menu">
                <li class="mt-2 mb-3">
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editProjectModal_@Model.Id"><i class="bi bi-pencil-fill"></i> Edit</a>
                </li>
                <hr />
                <li>
                    <a class="dropdown-item delete" asp-action="Delete" asp-controller="Projects" asp-route-id="@Model.Id" asp-route-avatar="@Model.Avatar"><i class="bi bi-trash"></i> Delete Project</a>
                </li>
            </ul>

        </div>
    </header>

    <div class="project-description">@Html.Raw(@Model.Description)</div>

    <footer>
        <div class="timeframe">
            <i class="bi bi-clock-fill"></i>
            <p>@status</p>
        </div>
        <div class="members">
            <img src="~/images/profile.png">
            <img src="~/images/profile.png">
            <img src="~/images/profile.png">
        </div>
    </footer>
</div>