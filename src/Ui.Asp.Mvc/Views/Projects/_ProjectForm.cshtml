@model ProjectDto

@{
    var customers = ViewBag.Customers;
    var statuses = ViewBag.Statuses;
}

<div class="image-preview-container">
    <div id="circle-container" class="image-preview-border">
        <div class="circle circle-gray">
            <i class="bi bi-camera"></i>
        </div>
    </div>
    <img src="#" id="image-preview" alt="avatar image preview" class="d-none" />
    <input asp-for="File" hidden accept="image/*" />
</div>



<div class="col-md-12 form-group">
    <label asp-for="Name" ></label>
    <input asp-for="Name" class="form-control" autocomplete="off" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="col-md-12 form-group">
    <label asp-for="CustomerId" ></label>
    <select asp-for="CustomerId" asp-items="@customers" class="form-control">
        <option value="" disabled selected>-- Select a Customer --</option>
    </select>
    <span asp-validation-for="CustomerId" class="text-danger"></span>
</div>

<div class="col-md-12 form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control"  />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group-horizontal">
    <div class="col-6">
        <label asp-for="StartDate" ></label>
        <input asp-for="StartDate" class="form-control" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="col-6">
        <label asp-for="EndDate" ></label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
</div>

<div class="col-md-12 form-group">
    <label asp-for="StatusId"></label>
    <select asp-for="StatusId" asp-items="@statuses" class="form-control">
        <option value="" disabled selected>-- Select a Status --</option>
    </select>
    <span asp-validation-for="StatusId" class="text-danger"></span>
</div>

<div class="col-md-12 form-group">
    <label asp-for="Budget" ></label>
    <input asp-for="Budget" class="form-control" />
    <span asp-validation-for="Budget" class="text-danger"></span>
</div>


@await Html.PartialAsync("_ValidationScripts")

