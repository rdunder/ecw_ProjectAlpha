@model LoginViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";

    var errorCount = ViewData.ModelState.Values.SelectMany(v => v.Errors).Count();
}

<div class="surface">
    <form class="form-container" method="post" asp-controller="Auth" asp-action="Login" >
        <h1>Login</h1>

        <div class="form-group">
            <button class="btn btn-grey">
                <img src="~/images/google-icon.png" />
                <span>Login with Google </span>
            </button>
        </div>

        <div class="form-divider-alt">
            <div class="line"></div>
            <p>OR</p>
            <div class="line"></div>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" placeholder="Enter Your Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" ></label>
            <input asp-for="Password" placeholder="Enter Your Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <div class="d-flex justify-content-between">
                <div class="checkbox">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>
                <p><a asp-action="ForgotPassword">Forgot password?</a></p>
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-blue">Log in</button>
        </div>

        @if (errorCount <= 1)
        {
            @Html.ValidationSummary()
        }       


        <p class="mt-5">
            Don´t have an account?
            <a asp-action="Register"> Sign Up</a>
        </p>
        
    </form>
</div>
