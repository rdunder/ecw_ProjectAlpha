
<div class="sidemenu-container">
    <a href="/" class="logo">
        <img src="~/images/Logo.png" />
        <span>alpha</span>
    </a>
    <nav class="sidemenu-nav">
        <a class="nav-link @(Context.Request.Path == "/" ? "active" : "")" asp-controller="Projects" asp-action="Index">
            <i class="bi bi-briefcase-fill"></i> 
            <span>Projects</span>
        </a>
        
        @if (!User.IsInRole("Viewer"))
        {
            <a class="nav-link @(Context.Request.Path == "/members" ? "active" : "")" asp-controller="Members" asp-action="Index">
                <i class="bi bi-people-fill"></i> 
                <span>Team Members</span>
            </a>

            <a class="nav-link @(Context.Request.Path == "/customers" ? "active" : "")" asp-controller="Customers" asp-action="Index">
                <i class="bi bi-buildings"></i>
                <span>Customers</span>
            </a>

            <a class="nav-link @(Context.Request.Path == "/jobtitles" ? "active" : "")" asp-controller="JobTitles" asp-action="Index">
                <i class="bi bi-person-vcard-fill"></i>
                <span>Job Titles</span>
            </a>            
        }       
        
        <a class="nav-link @(Context.Request.Path == "/privacy" ? "active" : "")"
           asp-controller="Privacy"
           asp-action="Index"
           asp-route-layout="portal">
            <i class="bi bi-person-vcard-fill"></i>
            <span>Privacy & User Agreement</span>
        </a>

    </nav>
</div>
