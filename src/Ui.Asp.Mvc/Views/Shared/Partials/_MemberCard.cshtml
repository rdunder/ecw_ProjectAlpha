@model User


@{
    
}

<div class="member-card">
    <div class="menu">
        <button 
        class="menu-btn"
        data-bs-toggle="dropdown">
            <i class="bi bi-three-dots"></i>
        </button>

        <ul class="dropdown-menu">
            <li class="mt-2 mb-3">
                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-pencil-fill"></i> Edit</a>
            </li>
            <hr />
            <li>
                <a class="dropdown-item delete" asp-action="Delete" asp-controller="Members" asp-route-email="@Model.Email" ><i class="bi bi-trash"></i> Delete User</a>
            </li>
        </ul>
    </div>

    <div class="avatar-container">
        <img class="avatar" src="./images/avatarLarge.png" />
    </div>

    <h4>@Model.FirstName @Model.LastName</h4>

    <p class="title">@Model.RoleName</p>

    <p class="contact">@Model.Email</p>
    <p class="contact">+46 070-123 45 78</p>

    <div class="msg-btn-container">
        <button class="btn btn-grey">Message</button>
    </div>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">@Model.FirstName @Model.LastName</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>