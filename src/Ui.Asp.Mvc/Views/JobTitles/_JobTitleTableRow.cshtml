@model JobTitleModel

@{
    var editForm = new JobTitlesFormViewModel
    {
        Id = Model.Id,
        Title = Model.Title
    };
}

<div class="tr content">
    <p>@Model.Title</p>
    <p>@Model.Id</p>
    <p class="table-options">
        <a class="option-item" href="#" data-bs-toggle="modal" data-bs-target="#editJobTitleModal_@Model.Id"><i class="bi bi-pencil-fill"></i></a>
        <a class="option-item delete" asp-action="Delete" asp-controller="JobTitles" asp-route-id="@Model.Id"><i class="bi bi-trash"></i></a>
    </p>
    <partial name="_EditJobTitleModal" model="@editForm" />
</div>